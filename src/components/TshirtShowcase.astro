---
// T-shirt data
const tshirts = [
  {
    id: 1,
    image: "/T1-min.png",
    title: "Classic Minimal Tee",
    description: "Clean design meets comfort in this essential wardrobe staple.",
    price: "$29",
    featured: true
  },
  {
    id: 2,
    image: "/T2-min.png",
    title: "Modern Graphic Tee",
    description: "Bold statement piece with contemporary artistic flair.",
    price: "$34",
    featured: false
  },
  {
    id: 3,
    image: "/T3-min.png",
    title: "Vintage Inspired Tee",
    description: "Retro vibes with a modern twist for the style-conscious.",
    price: "$32",
    featured: false
  }
];
---

<section class="bg-bg-muted relative isolate px-6 py-24 sm:py-32 lg:px-8">
  <!-- Background decoration -->
  <div class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl" aria-hidden="true">
    <div class="mx-auto aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-secondary/20 to-primary/20 opacity-30" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
  </div>

  <div class="mx-auto max-w-7xl">
    <!-- Section header -->
    <div class="mx-auto max-w-4xl text-center mb-16">
      <h2 class="text-base/7 font-semibold text-primary">Featured Collection</h2>
      <p class="mt-2 text-5xl font-semibold tracking-tight text-balance text-fg sm:text-6xl">Premium T-Shirt Designs</p>
      <p class="mx-auto mt-6 max-w-2xl text-center text-lg font-medium text-pretty text-fg/70 sm:text-xl/8">
        Discover our carefully curated collection of premium t-shirts, designed for comfort and style.
      </p>
    </div>

    <!-- T-shirt Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {tshirts.map((tshirt) => (
        <div class="group relative">
          <!-- Image Container -->
          <div class="aspect-square mb-6 overflow-hidden rounded-2xl bg-bg/60">
            <img 
              src={tshirt.image} 
              alt={tshirt.title}
              class="h-full w-full object-cover transition-transform duration-500 ease-out group-hover:scale-110"
            />
          </div>
          
          <!-- Content -->
          <div class="flex flex-col h-32">
            <div class="flex-1">
              <h3 class="text-2xl font-semibold text-fg">{tshirt.title}</h3>
              <p class="mt-2 text-fg/70">{tshirt.description}</p>
            </div>
            
            <div class="flex items-center justify-between mt-auto">
              <span class="text-xl font-bold text-primary">{tshirt.price}</span>
              <a 
                href="/shop" 
                class="inline-flex items-center gap-2 text-sm font-medium text-primary hover:text-primary/80 transition-colors duration-200"
              >
                Shop Now
                <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section> 